﻿@using System.Net.Http.Headers
@inject HttpClient Http
@inject ILocalStorageService _localStorage
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <MudCard Elevation="0" Square="true" Style="background-color: transparent">
            <MudCardContent Class="d-flex flex-column justify-center py-3">
                <MudText Typo="Typo.h6" Align="Align.Center" Style="font-weight: 600;" Color="Color.Default">codesome</MudText>
            </MudCardContent>
        </MudCard>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Dashboard</MudNavLink>
            <MudNavLink Href="/books" Icon="@Icons.Material.Filled.Book" IconColor="Color.Primary">
                Books
            </MudNavLink>
            <MudNavLink Href="/publishers" Icon="@Icons.Material.Filled.Publish" Match="NavLinkMatch.Prefix" IconColor="Color.Primary">
            publishers
            </MudNavLink>
            <MudNavLink Href="/authors" Icon="@Icons.Material.Filled.LockPerson" Match="NavLinkMatch.Prefix" IconColor="Color.Primary">
            Authors
            </MudNavLink>
            <MudNavLink Href="/categories" Icon="@Icons.Material.Filled.Category" IconColor="Color.Primary">
                Categories
            </MudNavLink>
            <MudNavLink Href="/lessons" Match="NavLinkMatch.Prefix">Lessons</MudNavLink>
            <MudNavLink Href="/lessons/new" Match="NavLinkMatch.Prefix">Add Lesson</MudNavLink>
            <MudNavLink Href="/enrollments" Match="NavLinkMatch.Prefix">Enrollments</MudNavLink>
            <MudNavGroup Title="Settings" Expanded="false">
                <MudNavLink Href="/users" Match="NavLinkMatch.Prefix">Users</MudNavLink>
                <MudNavLink Href="/security" Match="NavLinkMatch.Prefix">Security</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/about" Match="NavLinkMatch.Prefix">About</MudNavLink>
        </MudNavMenu>
    </Authorized>
    <NotAuthorized>

    </NotAuthorized>
</AuthorizeView>