@page "/rentals"
@using MudBlazor
@using MudBlazor.Components
@using ZNSTLibrary.Data.Models
@using ZNSTLibrary.Data.Services.Users
@using ZNSTLibrary.Services.Books
@using ZNSTLibrary.Services.Rentals
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager
@inject IBookRentalService _bookRentalService
@inject IBooksService booksService
@inject IUserService usersService
@inject IDialogService DialogService

@if (rentals == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <MudButton @onclick="openAddRentalModal" Variant="Variant.Filled" Color="Color.Primary">
        Add Rental
    </MudButton>
    <MudTable Items="@rentals" T="BookRental" @bind-SelectedItem="selectedRental">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Book Rentals</MudText>
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Book ID</MudTh>
            <MudTh>User ID</MudTh>
            <MudTh>Rental Date</MudTh>
            <MudTh>Return Date</MudTh>
            <MudTh>Is Returned</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Book ID">@context.BookId</MudTd>
            <MudTd DataLabel="User ID">@context.UserId</MudTd>
            <MudTd DataLabel="Rental Date">@context.RentalDate.ToShortDateString()</MudTd>
            <MudTd DataLabel="Return Date">@context.ReturnDate.ToShortDateString()</MudTd>
            @* <MudTd DataLabel="Is Returned">@context.IsReturned ? "Yes" : "No"</MudTd> *@
        </RowTemplate>
        <PagerContent>
            <MudTablePager PageSizeOptions="new int[] { 10, 25, 50, 100 }" />
        </PagerContent>
    </MudTable>
}

@code {
    private List<BookRental> rentals = new List<BookRental>();
    private BookRental selectedRental = new BookRental();

    protected override async Task OnInitializedAsync()
    {

        var res = await _bookRentalService.GetBookRentals();

        if (res != null)
        {
            rentals = res;
        }
    }

    void OpenCoursePage(TableRowClickEventArgs<Book> tableRowClickEventArgs)
    {
        NavigationManager.NavigateTo($"/rental-details/{tableRowClickEventArgs.Item.Id}");
    }

    void openAddRentalModal()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true };
        DialogService.Show<AddRental>("Add Rental", options);
    }

}